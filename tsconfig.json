{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "module": "es2022",
    "moduleResolution":"Bundler",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/"
  ]
}
